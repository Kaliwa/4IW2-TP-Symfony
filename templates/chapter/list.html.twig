{% extends 'base.html.twig' %}

{% block title %}Chapter List{% endblock %}

{% block body %}
    <h1>Chapter List</h1>

    <a href="{{ path('chapter_create') }}" class="btn btn-primary mb-3">Create New Chapter</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for chapter in chapters %}
                <tr>
                    <td>{{ chapter.id }}</td>
                    <td>{{ chapter.title }}</td>
                    <td>{{ chapter.description }}</td>
                    <td>
                        <a href="{{ path('chapter_list', { id: chapter.id }) }}" class="btn btn-info btn-sm">View</a>
                        <a href="{{ path('chapter_edit', { id: chapter.id }) }}" class="btn btn-warning btn-sm">Edit</a>
                        <form action="{{ path('chapter_delete', { id: chapter.id }) }}" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            {{ csrf_token('delete' ~ chapter.id) | raw }}
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">No chapters found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

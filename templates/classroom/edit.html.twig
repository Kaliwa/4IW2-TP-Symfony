{% extends 'base.html.twig' %}

{% block title %}Modifier une classe{% endblock %}

{% block body %}
<div class="max-w-lg mx-auto mt-10 p-6 bg-white shadow-md rounded-lg">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Modifier la classe</h1>

    {{ form_start(form) }}
        <div class="mb-4">
            {{ form_label(form.name, 'Nom de la classe', {'label_attr': {'class': 'block text-gray-700 font-medium mb-2'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
            <div class="text-red-500 text-sm">{{ form_errors(form.name) }}</div>
        </div>
        
        <div class="mb-4">
            {{ form_label(form.level, 'Niveau', {'label_attr': {'class': 'block text-gray-700 font-medium mb-2'}}) }}
            {{ form_widget(form.level, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
            <div class="text-red-500 text-sm">{{ form_errors(form.level) }}</div>
        </div>

        <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
            Enregistrer les modifications
        </button>
    {{ form_end(form) }}

    <a href="{{ path('classroom_list') }}" class="block text-center mt-4 text-gray-700 hover:underline">Retour Ã  la liste</a>
</div>
{% endblock %}

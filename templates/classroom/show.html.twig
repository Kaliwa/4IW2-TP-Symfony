{% extends 'base.html.twig' %}

{% block title %}Détails de la classe{% endblock %}

{% block body %}
<div class="max-w-lg mx-auto mt-10 p-6 bg-white shadow-md rounded-lg">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Détails de la classe</h1>

    <div class="mb-4">
        <p class="text-gray-700"><strong>Nom:</strong> {{ classroom.name }}</p>
    </div>

    <div class="mb-4">
        <p class="text-gray-700"><strong>Niveau:</strong> {{ classroom.level }}</p>
    </div>

    <div class="flex space-x-4 mt-6">
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('classroom_edit', {'id': classroom.id}) }}" class="flex-1 bg-yellow-500 text-white py-2 px-4 rounded-md hover:bg-yellow-600 text-center">
            Modifier
        </a>
    {% else %}
        <a href="{{ path('subject_show', {'id': classroom.id}) }}" class="flex-1 bg-yellow-500 text-white py-2 px-4 rounded-md hover:bg-yellow-600 text-center">
            Voir les sujets
        </a>
    {% endif %}
        <a href="{{ path('classroom_list') }}" class="flex-1 bg-gray-300 text-black py-2 px-4 rounded-md hover:bg-gray-400 text-center">
            Retour à la liste
        </a>
    </div>
</div>
{% endblock %}

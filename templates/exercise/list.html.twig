{% extends 'base.html.twig' %}

{% block title %}Exercise List{% endblock %}

{% block body %}
    <h1>Exercise List</h1>

    <a href="{{ path('exercise_create') }}" class="btn btn-success mb-3">Create New Exercise</a>

    {% if exercises is not empty %}
        <table class="table">
            <thead>
                <tr>
                    <th>Question</th>
                    <th>Response</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for exercise in exercises %}
                    <tr>
                        <td>{{ exercise.question }}</td>
                        <td>{{ exercise.response }}</td>
                        <td>
                            <a href="{{ path('exercise_edit', {'id': exercise.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                            <a href="{{ path('exercise_delete', {'id': exercise.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this exercise?');">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No exercises found.</p>
    {% endif %}
{% endblock %}

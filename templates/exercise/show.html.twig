{% extends 'base.html.twig' %}

{% block title %}Détails de l'exercice{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto mt-10 bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-4">Détails de l'exercice</h1>

    <div class="space-y-4">
        <div>
            <h2 class="text-xl font-semibold text-gray-700">Question :</h2>
            <p class="text-gray-600">{{ exercise.question }}</p>
        </div>

        <div>
            <h2 class="text-xl font-semibold text-gray-700">Réponse :</h2>
            <p class="text-gray-600">{{ exercise.response }}</p>
        </div>
    </div>

    <hr class="my-6">

    <div class="flex space-x-4">
        {% if is_granted('ROLE_ADMIN') %}    
            <a href="{{ path('exercise_edit', {'id': exercise.id}) }}" class="bg-yellow-500 text-white py-2 px-4 rounded-md hover:bg-yellow-600 focus:outline-none">
                Modifier l'exercice
            </a>
        {% endif %}
        <a href="{{ path('exercise_list') }}" class="bg-gray-500 text-white py-2 px-4 rounded-md hover:bg-gray-600 focus:outline-none">
            Retour à la liste
        </a>
    </div>
</div>
{% endblock %}

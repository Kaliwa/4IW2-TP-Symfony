{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="w-full max-w-lg bg-white shadow-lg rounded-lg p-6">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="bg-red-100 text-red-700 p-3 rounded mb-4">
                {{ flash_error }}
            </div>
        {% endfor %}

        <h1 class="text-2xl font-bold text-gray-800 text-center mb-6">Register</h1>

        <div class="mb-4">
            {{ form_errors(registrationForm) }}
        </div>

        <div class="space-y-4">
            {{ form_start(registrationForm, { attr: { class: "space-y-4" } }) }}
                {{ form_widget(registrationForm, { attr: { class: "w-full px-4 py-2 border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-400" } }) }}
            {{ form_end(registrationForm) }}
        </div>

        <div class="mt-4 text-center">
            <a href="/login" class="text-blue-500 hover:underline">Se connecter</a>
        </div>
    </div>
</div>
{% endblock %}

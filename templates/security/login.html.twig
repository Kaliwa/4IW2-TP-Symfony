{% extends 'base.html.twig' %} {% block title %}Log in!{% endblock %} {% block
body %}
<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="w-full max-w-md bg-white shadow-lg rounded-lg p-6">
    <form method="post">
      {% if error %}
      <div class="bg-red-100 text-red-700 p-3 rounded mb-4">
        {{ error.messageKey|trans(error.messageData, 'security') }}
      </div>
      {% endif %}

      <h1 class="text-2xl font-bold text-gray-800 text-center mb-6">
        Please sign in
      </h1>

      <div class="mb-4">
        <label for="inputUsername" class="block text-gray-600 font-medium mb-2"
          >Username</label
        >
        <input
          type="text"
          value="{{ last_username }}"
          name="username"
          id="inputUsername"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-400"
          autocomplete="username"
          required
          autofocus
        />
      </div>

      <div class="mb-4">
        <label for="inputPassword" class="block text-gray-600 font-medium mb-2"
          >Password</label
        >
        <input
          type="password"
          name="password"
          id="inputPassword"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-400"
          autocomplete="current-password"
          required
        />
      </div>

      <input
        type="hidden"
        name="_csrf_token"
        value="{{ csrf_token('authenticate') }}"
      />

      <div class="flex items-center mb-4">
        <input
          type="checkbox"
          name="_remember_me"
          id="remember_me"
          class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
        />
        <label for="remember_me" class="ml-2 text-sm text-gray-600"
          >Remember me</label
        >
      </div>

      <button
        type="submit"
        class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg shadow hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400"
      >
        Sign in
      </button>
    </form>

    <div class="mt-4 text-center">
      <a href="/register" class="text-blue-500 hover:underline">S'inscrire</a>
    </div>
    <div class="mt-2 text-center">
      <a href="/reset-password" class="text-blue-300 underline text-sm"
        >Mot de passe oubli√©</a
      >
    </div>
  </div>
</div>
{% endblock %}

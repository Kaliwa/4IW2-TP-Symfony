{% extends 'base.html.twig' %}

{% block title %}Subject List{% endblock %}

{% block body %}
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-bold text-center mb-6">Subject List</h1>

        <a href="{{ path('subject_create') }}" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 mb-4 inline-block">Create New Subject</a>

        <div class="overflow-x-auto bg-white shadow-lg rounded-lg">
            <table class="table-auto w-full text-left border-collapse">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="py-2 px-4 border-b">ID</th>
                        <th class="py-2 px-4 border-b">Name</th>
                        <th class="py-2 px-4 border-b">Description</th>
                        <th class="py-2 px-4 border-b">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for subject in subjects %}
                        <tr class="hover:bg-gray-50">
                            <td class="py-2 px-4 border-b">{{ subject.id }}</td>
                            <td class="py-2 px-4 border-b">{{ subject.name }}</td>
                            <td class="py-2 px-4 border-b">{{ subject.description }}</td>
                            <td class="py-2 px-4 border-b space-x-2">
                                <a href="{{ path('subject_show', { id: subject.id }) }}" class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600">View</a>
                                <a href="{{ path('subject_edit', { id: subject.id }) }}" class="bg-yellow-500 text-white px-3 py-1 rounded hover:bg-yellow-600">Edit</a>
                                <form action="{{ path('subject_delete', { id: subject.id }) }}" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    {{ csrf_token('delete' ~ subject.id) | raw }}
                                    <button type="submit" class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center py-4">No subjects found.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

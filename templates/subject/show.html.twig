{% extends 'base.html.twig' %}

{% block title %}Subject Details{% endblock %}

{% block body %}
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-bold text-center mb-6">Subject Details</h1>

        <div class="bg-white shadow-lg rounded-lg p-6">
            <h2 class="text-2xl font-semibold">{{ subject.name }}</h2>
            <p class="text-gray-700 mt-2"><strong>Description:</strong> {{ subject.description }}</p>

        <h2 class="text-xl font-semibold mb-4">Chapters</h2>
        <ul class="list-disc pl-5">
            {% for chapter in subject.chapters %}
                <li class="mb-2">
                    <a href="{{ path('chapter_show', {'id': chapter.id}) }}" class="text-blue-600 hover:underline">{{ chapter.title }}</a>
                </li>
            {% else %}
                <li>No chapters available.</li>
            {% endfor %}
        </ul>

        <div class="mt-6">
            <a href="{{ path('subject_edit', {'id': subject.id}) }}" class="bg-yellow-500 text-white py-2 px-4 rounded hover:bg-yellow-600">Edit Subject</a>
            <a href="{{ path('subject_list') }}" class="bg-gray-300 text-black py-2 px-4 rounded hover:bg-gray-400 ml-2">Back to list</a>
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto p-6 bg-white rounded-lg shadow-lg">
        <h1 class="text-2xl font-semibold mb-6 text-gray-800">Edit User</h1>

        {{ form_start(form) }}
            <div class="mb-6">
                {{ form_label(form.profileImage, 'profileImage', {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}) }}
                {{ form_widget(form.profileImage, {'attr': {'class': 'mt-2 p-3 border border-gray-300 rounded-md shadow-sm w-full focus:ring-indigo-500 focus:border-indigo-500'}}) }}
            </div>

            <div class="mb-6">
                {{ form_label(form.firstname, 'Firstname', {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}) }}
                {{ form_widget(form.firstname, {'attr': {'class': 'mt-2 p-3 border border-gray-300 rounded-md shadow-sm w-full focus:ring-indigo-500 focus:border-indigo-500'}}) }}
            </div>

            <div class="mb-6">
                {{ form_label(form.lastname, 'Lastname', {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}) }}
                {{ form_widget(form.lastname, {'attr': {'class': 'mt-2 p-3 border border-gray-300 rounded-md shadow-sm w-full focus:ring-indigo-500 focus:border-indigo-500'}}) }}
            </div>

            <div class="mb-6">
                {{ form_label(form.username, 'Username', {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}) }}
                {{ form_widget(form.username, {'attr': {'class': 'mt-2 p-3 border border-gray-300 rounded-md shadow-sm w-full focus:ring-indigo-500 focus:border-indigo-500'}}) }}
            </div>

            <div class="mb-6">
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'mt-2 p-3 border border-gray-300 rounded-md shadow-sm w-full focus:ring-indigo-500 focus:border-indigo-500'}}) }}
            </div>

            <div class="mb-6">
                {{ form_label(form.classeID, 'Classe', {'label_attr': {'class': 'block text-lg font-medium text-gray-700'}}) }}
                {{ form_widget(form.classeID, {'attr': {'class': 'mt-2 p-3 border border-gray-300 rounded-md shadow-sm w-full focus:ring-indigo-500 focus:border-indigo-500'}}) }}
            </div>
        {{ form_end(form) }}

        <a href="{{ path('user_list') }}" class="mt-6 inline-block text-gray-600 hover:text-gray-800 bg-gray-200 py-2 px-4 rounded-md">Retourner aux utilisateurs</a>
    </div>
{% endblock %}

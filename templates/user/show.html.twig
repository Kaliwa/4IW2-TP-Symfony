{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto p-6 bg-white rounded-lg shadow-lg">
    <h1 class="text-3xl font-semibold text-gray-800 mb-4">User: {{ user.username }}</h1>

    <p class="text-lg text-gray-700 mb-6">Email: <span class="font-medium text-gray-900">{{ user.email }}</span></p>

    <div class="flex space-x-4">
        <a href="{{ path('user_edit', {id: user.id}) }}" class="px-6 py-2 bg-yellow-500 text-white rounded-md hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:ring-offset-2">Edit User</a>
        <a href="{{ path('user_list') }}" class="px-6 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2"> List</a>
    </div>
</div>
{% endblock %}
